{
  "name": "dicom-viewer",
  "version": "1.0.0",
  "description": "DICOM Viewer with React, TypeScript, and CornerstoneJS",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --mode development --port 3000",
    "build": "webpack"
  },
  "dependencies": {
    "@cornerstonejs/core": "^1.86.1",
    "@cornerstonejs/dicom-image-loader": "^1.86.0",
    "@cornerstonejs/tools": "^1.86.0",
    "cornerstone-core": "^2.6.1",
    "cornerstone-wado-image-loader": "^4.13.2",
    "dicom-parser": "^1.8.21",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.12",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.26",
    "autoprefixer": "^10.4.21",
    "css-loader": "^6.9.2",
    "path-browserify": "^1.0.1",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "style-loader": "^3.3.4",
    "tailwindcss": "^4.0.12",
    "ts-loader": "^9.5.0",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.0"
  },
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
